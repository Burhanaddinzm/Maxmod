@{
    ViewData["Title"] = "Delete Weight";
}
@model Weight

<form asp-controller="weight" asp-action="delete" asp-area="admin" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" id="name" disabled>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="index" asp-controller="weight" asp-area="admin" class="btn btn-secondary mx-2">Back to list</a>
</form>
