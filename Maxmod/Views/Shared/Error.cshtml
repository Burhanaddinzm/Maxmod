@{
    ViewData["Title"] = "Error";
}
@section Styles {
    <style>
        main {
            display: flex;
            flex-direction:column;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 50px
        }

            main h1 {
                font-size: 32px;
            }

            main a {
                color: #234925;
                text-decoration: underline;
