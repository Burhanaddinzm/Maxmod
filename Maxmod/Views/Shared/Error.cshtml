@{
    ViewData["Title"] = "Error";
}
@section Styles {
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 50px
        }

            main h1 {
                font-size: 32px;
            }

            main a {
                color: #234925;
                text-decoration: underline;
                font-size: 14px;
                margin-top: 4px;
            }

        @@media screen and (max-width:768px) {
            main h1 {
                font-size: 24px;
            }
        }
    </style>
}

<h1>@TempData["Error"]</h1>
<a asp-controller="home" asp-action="index">Redirecting to Homepage in <span id="countdown">5</span></a>

@section Scripts {
    <script>
        const countDownEl = document.getElementById("countdown");
        const h1El = document.querySelector("main h1");

        let seconds = 5;

        if (h1El.textContent === "") h1El.textContent = "Access Denied!";

        const countdown = () => {
            seconds = seconds - 1;

            if (seconds < 0) window.location.href = '@Url.Action("Index", "Home")';
            else countDownEl.textContent = seconds;
        }

        setInterval(countdown, 1000);
    </script>
}