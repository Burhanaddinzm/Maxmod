@{
    ViewData["Title"] = "Notification";
}
@section Styles {
    <style>
        main {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-top: 50px
        }

            main h1 {
                font-size: 32px;
            }

            main a {
                color: #234925;
                text-decoration: underline;
                font-size: 14px;
                margin-top: 4px;
            }

        @@media screen and (max-width:768px) {
            main h1 {
                font-size: 24px;
            }
        }
    </style>
}

<h1>@TempData["Notification"]</h1>
<a asp-controller="home" asp-action="index">Back to Homepage</a>
