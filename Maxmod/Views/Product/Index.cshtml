            <div class="pagination">
                @if (pager.TotalPages > 0)
                {
                    @if (pager.CurrentPage > 1)
                    {
                        @if (pager.CurrentPage != 2)
                        {
                            <a asp-action="index" asp-controller="product" asp-route-page="1" class="pagination-prev">@("<<")</a>
                        }
                        <a asp-action="index" asp-controller="product" asp-route-page="@(pager.CurrentPage - 1)" class="pagination-prev">@("<")</a>
                    }
                    <ul class="pagination-btns">
                        @for (int i = pager.StartPage; i <= pager.EndPage; i++)
                        {
                            <li>
                                <a asp-action="index" asp-controller="product" asp-route-page="@i" class="pagination-btn @(i == pager.CurrentPage ? "active" : "")">@i</a>
                            </li>
                        }
                    </ul>
                    @if (pager.CurrentPage < pager.TotalPages)
                    {
                        <a asp-action="index" asp-controller="product" asp-route-page="@(pager.CurrentPage + 1)" class="pagination-next">@(">")</a>
                        @if (pager.CurrentPage != pager.TotalPages - 1)
                        {
                            <a asp-action="index" asp-controller="product" asp-route-page="@(pager.TotalPages)" class="pagination-next">@(">>")</a>
                        }
                    }
                }
