@inject ISettingsService _settingsService
@{
    ViewData["Title"] = "Contact";
    var settings = await _settingsService.GetSettingsAsync();
}
@section Styles {
    <link rel="stylesheet" href="~/client/assets/css/contact.min.css" />
}

<div class="container">
    <div class="breadcrumbs">
        <span><a asp-controller="home" asp-action="index">Home </a>>&nbsp;</span><span> Contact</span>
    </div>
    <!-- Contact Start -->
    <section class="contact-section">
        <form method="post" asp-action="SendEmail">
            <h1>Contact</h1>
            <input placeholder="Name" type="text" name="Name" required />
            <input placeholder="Email" type="email" name="Email" required />
            <input placeholder="Phone" type="text" name="Phone" />
            <textarea placeholder="Message" name="Message" required></textarea>
            <button class="btn" type="submit">Send</button>
        </form>
        <div class="location-details">
            <h2>Location & Details</h2>
            <p>@settings.ContactText</p>
            <div>Address: <span>@settings.Address</span></div>
            <div>Phone: <span>@settings.Phone</span></div>
            <div>Email: <span>@settings.Email</span></div>
            <div style="width: 100%">
                <iframe width="100%" height="250" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=250&amp;hl=en&amp;q=4800%20San%20Mateo%20Ln%20NE+(Maxmod%20HQ)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a href="https://www.gps.ie/">gps trackers</a></iframe>
            </div>
        </div>
    </section>
</div>
